npm start
npx react-native init nome_projeto
npx react-native run-android

//Lib que formata o input de texto para numero de telefone, cartão de credito, cpf e outros
npm i react-native-masked-text

//Lib que persiste os dados coletados da interface
// https://react-native-async-storage.github.io/async-storage/docs/install/
npm install @react-native-async-storage/async-storage

//Lib que permite a navegação entre telas
// https://reactnavigation.org/docs/getting-started/
//https://reactnative.dev/docs/navigation
npm install @react-navigation/native @react-navigation/native-stack

// A react-navigation possui dependencia das libs abaixo, por isso devemos baixar elas
npm install react-native-screens react-native-safe-area-context

//https://reactnavigation.org/docs/stack-navigator
npm install @react-navigation/stack

//A lib @react-navigation/stack, depende da react-native-gesture-handler, por isso devemos instalá-la:
npm install react-native-gesture-handler

//https://reactnavigation.org/docs/drawer-navigator
//Lib que cria um menu de navegação na lateral esquerda
npm install @react-navigation/drawer

//A lib drawer depende das libs abaixo, por isso devemos instalá-las:
npm install react-native-gesture-handler react-native-reanimated

//Lib que permite a navegação de telas por tabs
npm install @react-navigation/bottom-tabs

// https://www.npmjs.com/ - Repositório com as principais libs para react-native
